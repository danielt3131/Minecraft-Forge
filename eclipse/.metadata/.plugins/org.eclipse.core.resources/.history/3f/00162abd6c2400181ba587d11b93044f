package com.LSUtigers3131.mod.crafting;

import com.LSUtigers3131.mod.blocks.ModBlocks;
import com.LSUtigers3131.mod.items.ModItems;

import net.minecraft.item.ItemStack;
import net.minecraftforge.fml.common.registry.GameRegistry;

public class ModCrafting 
{
	public static void register() 
	{
		GameRegistry.addShapedRecipe(new ItemStack(ModBlocks.RUBY_BLOCK), "RRR", "RRR", "RRR", "R", ModItems.RUBY);
	}
}
