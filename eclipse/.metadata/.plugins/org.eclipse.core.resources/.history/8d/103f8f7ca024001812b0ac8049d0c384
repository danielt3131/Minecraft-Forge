package com.LSUtigers3131.mod.items;

import java.util.Set;

import com.LSUtigers3131.mod.Main;
import com.google.common.collect.Sets;

import net.minecraft.block.Block;
import net.minecraft.init.Blocks;
import net.minecraft.item.Item;
import net.minecraft.item.ItemPickaxe;
import net.minecraft.item.ItemTool;

public class ItemOP_Pickaxe extends ItemPickaxe implements IHasModel {

	protected ItemOP_Pickaxe(ToolMaterial material) {
		super(material);
		this.maxStackSize = 1;
		this.toolMaterial = ToolMaterial.DIAMOND;
		this.efficiency = 8.0F;
		setUnlocalizedName("op_pickaxe");
		setRegistryName("op_pickaxe");
		setCreativeTab(Main.daniel);
		
		ModItems.ITEMS.add(this);
	}
	
	@Override
	public void registerModels() 
	{
		Main.proxy.registerItemRenderer(this, 0, "inventory");
	}
}
