package com.LSUtigers3131.mod.blocks;

import com.LSUtigers3131.mod.Main;
import com.LSUtigers3131.mod.items.IHasModel;
import com.LSUtigers3131.mod.items.ModItems;

import net.minecraft.block.Block;
import net.minecraft.block.material.Material;
import net.minecraft.creativetab.CreativeTabs;
import net.minecraft.item.Item;
import net.minecraft.item.ItemBlock;

public class BlockLightBlock extends Block implements IHasModel {

	public BlockLightBlock() 
	{
		super(Material.IRON);

		setCreativeTab(CreativeTabs.BUILDING_BLOCKS);
		setLightLevel(15);
		setHardness(50);
		setUnlocalizedName("light");
		setRegistryName("light");
		
		ModBlocks.BLOCKS.add(this);
		ModItems.ITEMS.add(new ItemBlock(this).setRegistryName(this.getRegistryName()));
	}
	
	@Override
	public void registerModels() 
	{
		Main.proxy.registerItemRenderer(Item.getItemFromBlock(this), 0, "inventory");
	}

}
